{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "stripInternal": true,
    "outDir": "./dist/esm",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "baseUrl": ".",
    "paths": {
      "git-essentials": ["./src/index"]
    }
  }
}
