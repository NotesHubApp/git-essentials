{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "git-essentials": ["./src/index"],
      "git-essentials/*": ["./src/*"]
    }
  }
}
